<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.yumcoach.payments.model.mapper.SubscriptionMapper">

    <resultMap id="SubscriptionMap" type="com.ssafy.yumcoach.payments.model.Subscription">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="planType" column="plan_type" />
        <result property="status" column="status" />
        <result property="startDate" column="start_date" />
        <result property="endDate" column="end_date" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <insert id="upsertSubscription" parameterType="com.ssafy.yumcoach.payments.model.Subscription" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO subscriptions (user_id, plan_type, status, start_date, end_date, created_at, updated_at)
        VALUES (#{userId}, #{planType}, #{status}, #{startDate}, #{endDate}, NOW(), NOW())
        ON DUPLICATE KEY UPDATE
            plan_type = VALUES(plan_type),
            status = VALUES(status),
            start_date = VALUES(start_date),
            end_date = VALUES(end_date),
            updated_at = CURRENT_TIMESTAMP
    </insert>

    <select id="findByUserId" parameterType="int" resultMap="SubscriptionMap">
        SELECT * FROM subscriptions WHERE user_id = #{userId}
    </select>
</mapper>
